{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "es2015",
    "lib": ["es2015", "es2017"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "allowJs": true,
    "pretty": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["typings/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "dangerfile.ts"],
  "exclude": [
    "dangerfile.ts",
    "node_modules",
    "Pod/Assets",
    "Example/Build",
    "externals",
    "build",
    "index.ios.js",
    "**/__mocks__"
  ]
}
